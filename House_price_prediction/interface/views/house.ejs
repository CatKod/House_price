<%- include('partials/header') %>

<div class="row mb-4">
  <div class="col">
    <h1>Chi Tiết Bất Động Sản</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title"><%= house.title %></h2>
        <p class="text-muted">ID: <%= house.house_id %></p>
        
        <div class="row mb-4">
          <div class="col-md-6">
            <h4>Thông tin cơ bản</h4>
            <ul class="list-unstyled">
              <li><strong>Quận/Huyện:</strong> <%= house.district %></li>
              <li><strong>Giá:</strong> <%= house.formatted_price %></li>
              <li><strong>Diện tích:</strong> <%= house.area %> m²</li>
              <li><strong>Phòng ngủ:</strong> <%= house.bedrooms %></li>
              <li><strong>Phòng tắm:</strong> <%= house.bathrooms %></li>
              <li><strong>Số tầng:</strong> <%= house.floors %></li>
              <li><strong>Chiều rộng:</strong> <%= house.width_meters %> m</li>
            </ul>
          </div>
          <div class="col-md-6">
            <h4>Thông tin bổ sung</h4>
            <ul class="list-unstyled">
              <li><strong>Loại:</strong> <%= house.type %></li>
              <li><strong>Đường:</strong> <%= house.street %></li>
              <li><strong>Phường/Xã:</strong> <%= house.ward %></li>
              <li><strong>Mô tả:</strong> <%= house.description %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h4>Liên hệ</h4>
        <p><strong>Người đăng:</strong> <%= house.user_name %></p>
        <p><strong>Email:</strong> <%= house.user_email %></p>
        <p><strong>Điện thoại:</strong> <%= house.user_phone %></p>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col">
    <a href="/" class="btn btn-secondary">Quay lại danh sách</a>
  </div>
</div>

<%- include('partials/footer') %> 