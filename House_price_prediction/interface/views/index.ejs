<%- include('partials/header') %>

<div class="row mb-4">
  <div class="col">
    <h1>Danh Sách Bất Động Sản</h1>
    <p>Tổng số bất động sản: <%= typeof totalProperties !== 'undefined' ? totalProperties : 'N/A' %></p>
  </div>
</div>

<div class="row">
  <% if (properties && properties.length === 0) { %>
    <div class="col">
      <div class="alert alert-info">Không có bất động sản nào.</div>
    </div>
  <% } else { %>
    <% properties.forEach(property => { %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= property.title %></h5>
            <p class="card-text">
              <strong>ID:</strong> <%= property.house_id %><br>
              <strong>Quận/Huyện:</strong> <%= property.district %><br>
              <strong>Giá:</strong> <%= property.formatted_price %><br>
              <strong>Diện tích:</strong> <%= property.area %> m²<br>
              <strong>Phòng ngủ:</strong> <%= property.bedrooms %><br>
              <strong>Phòng tắm:</strong> <%= property.bathrooms %>
            </p>
            <a href="/house/<%= property.house_id %>" class="btn btn-primary">Xem chi tiết</a>
          </div>
        </div>
      </div>
    <% }); %>
  <% } %>
</div>

<div class="row mt-4">
  <div class="col">
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="/?page=<%= currentPage - 1 %>&per_page=<%= perPage %>">Trước</a>
          </li>
        <% } else { %>
          <li class="page-item disabled">
            <span class="page-link">Trước</span>
          </li>
        <% } %>
        
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="/?page=<%= i %>&per_page=<%= perPage %>"><%= i %></a>
          </li>
        <% } %>
        
        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="/?page=<%= currentPage + 1 %>&per_page=<%= perPage %>">Sau</a>
          </li>
        <% } else { %>
          <li class="page-item disabled">
            <span class="page-link">Sau</span>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
</div>

<%- include('partials/footer') %>